{
  "name": "movi-player",
  "version": "0.1.3",
  "description": "Modular streaming video library for browsers with WebAssembly FFmpeg pipeline",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./demuxer": {
      "import": "./dist/demuxer.js",
      "require": "./dist/demuxer.cjs",
      "types": "./dist/demuxer.d.ts"
    },
    "./player": {
      "import": "./dist/player.js",
      "require": "./dist/player.cjs",
      "types": "./dist/player.d.ts"
    },
    "./element": {
      "import": "./dist/element.js",
      "require": "./dist/element.cjs",
      "types": "./dist/element.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:ts",
    "build:ts": "node scripts/check-wasm.js && tsc && node scripts/build-standalone.js",
    "build:wasm": "mkdir -p dist/wasm && docker compose run --rm build",
    "build:wasm:force": "mkdir -p dist/wasm && docker compose run --rm -e FORCE_FFMPEG=true build",
    "dev": "vite",
    "test": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:deploy": "npm run docs:build && npx gh-pages -d docs/.vitepress/dist"
  },
  "keywords": [
    "video",
    "streaming",
    "ffmpeg",
    "wasm",
    "webassembly",
    "webcodecs",
    "demuxer",
    "decoder",
    "player",
    "hdr",
    "video-player",
    "mp4",
    "mkv",
    "hevc",
    "h264"
  ],
  "author": "Ujjwal Kashyap <mr.ujjwalg@gmail.com> (https://github.com/mrujjwalg)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrujjwalg/movi-player.git"
  },
  "bugs": {
    "url": "https://github.com/mrujjwalg/movi-player/issues"
  },
  "homepage": "https://github.com/mrujjwalg/movi-player#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.10.0",
    "@webgpu/types": "^0.1.69",
    "gh-pages": "^6.3.0",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitepress": "^1.6.4",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "hls.js": "^1.6.15"
  }
}
